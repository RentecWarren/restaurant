#!/usr/bin/env php
<?php

use Restaurant\Commands\MenuCommand;
use App\Commands\ViewOrdersCommand;
use App\Commands\ViewMenuCommand;
use App\Commands\PlaceOrdersCommand;
use App\Commands\ExportOrdersXMLCommand;
use App\Commands\CreateMenuCommand;
use App\Commands\CreateCustomersCommand;
use Symfony\Component\Console\Application;

require __DIR__ . '/../bootstrap.php';

if (file_exists(__DIR__ . '/../../../autoload.php')) {
    require __DIR__ . '/../../../autoload.php';
} else {
    require __DIR__ . '/../vendor/autoload.php';
}

/**
 * Start the console application.
 */
$app = new Application('Tasty Food Restaurant', '1.0.0');

$app->add(new MenuCommand());
$app->add(new ViewOrdersCommand());
$app->add(new ViewMenuCommand($entityManager));
$app->add(new PlaceOrdersCommand());
$app->add(new CreateCustomersCommand($entityManager));
$app->add(new CreateMenuCommand($entityManager));
$app->add(new ExportOrdersXMLCommand());

$app->run();